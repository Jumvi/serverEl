generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id Int @id @default(autoincrement())
  nom String
  postNom String
  email String @unique
  password String
  telephone String @unique 
  createdAt DateTime @default(now())
  role Role 
  monToken String? @unique
  localisation String?
  Biography String?
  profilImage String?
  verified Boolean?
  otpSecret String?

  

  projects Project[]
  contribution Contribution[]
}

enum Role{
  admin
  Entrepreneur
  Contributeur
}


model Project{
  id Int @id @default(autoincrement())
  titre String
  description String
  duree String
  image String
  pdfProjet String
  localisation String
  categorie Categorie

  user Users? @relation(fields:[userId],references:[id])
  userId Int?
  contribution Contribution[]
}

enum Categorie{
  agricole
  agroalimentaire
}

model Contribution{
  id Int @id @default(autoincrement()) @unique
  montant Float
  echeancePaiement String
  conditionRemboursement String
  releverBancaire String
  typeInvestissement TypeInvestissement
  
  user Users? @relation(fields: [userId],references: [id])
  userId Int?
  project Project? @relation(fields: [projectId], references: [id])
  projectId Int?
}

enum TypeInvestissement{
  don 
  investissement
}